{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "module": "nodenext",
    "target": "ES2020",
    "moduleResolution": "nodenext",

    "lib": ["es2020"],
    "types": ["node"],
    "skipLibCheck": true,
    "strict": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": false,
    "declaration": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
